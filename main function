#include <stdio.h>

void option1(void);
void option2(void);
void option3(void);
void option4(void);
void option5(void);
void spacegen(void)
{
	printf("\n\n");
}

void main(void)
{
	char userinput;
	int k=0;

	do
	{
		printf("Hello! Welcome to the Road Accidents Viewer 1.");
		spacegen();
		printf("Please select an option to view.");
		spacegen();
		printf("(A):Average number of accidents for a selected road user type over the five     years.");//spaces are to make the word 'years' appear nicely on the display
		spacegen();
		printf("(B):Total number of accidents for a selected year.");
		spacegen();
		printf("(C):The yearly differences between accidents of motorcyclists and total         accidents of other road users.");//spaces are to make the word 'accidents' appear nicely on the display
		spacegen();
		printf("(D):Display percentage of motorcyclists accidents with respect to yearly        total among road users from year 2010-2012.");//spaces are to make the word 'total' appear nicely on the display
		spacegen();
		printf("(Q):Exit program.");
		spacegen();


		userinput=getchar();


		switch(userinput)
		{
		case'A': case 'a':
			option1();
			spacegen();
			break;
		case'b':case 'B':
			option2();
			spacegen();
			break;
		case'c': case'C':
			option3();
			spacegen();
			break;
		case'd':case 'D':
			option4();
			spacegen();
			break;
		case'e':case 'E':
			option5();
			spacegen();
			break;
		case'q': case'Q':
			userinput='Q';
			spacegen();
			break;
		default: 
			printf("You have entered an invalid character.");
			spacegen();
			break;
		}
	}while(userinput!='Q');
}
