		if(j=0)
		{
			if(yr10acc[k]<min);
		        min=yr10acc[k];
		        arrayName=k;
		        indexMin=0;
		}
		else if(j=1)
		{
			if(yr11acc[k],min)
				min=yr11acc[k];
	            arrayName=k;
		        indexMin=0;
		}

	




	
	
}
